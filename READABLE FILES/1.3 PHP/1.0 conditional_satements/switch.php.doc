<?php
	$a = date("D");
	switch($a){
	case "Sun":
		echo "It is Sunday";
		break;
	case "Mon":
		echo "It is Monday";
		break;
	case "Tues":
		echo "It is Tuesday";
		break;
	case "Wed":
		echo "It is Wednesday";
		break;
	case "Thurs":
		echo "It is Thursday";
		break;
	case "Fri":
		echo "It is Friday";
		break;
	case "Sat":
		echo "It is Saturday";
		break;
	default:
		echo "Something is wrong";
	}
?>
